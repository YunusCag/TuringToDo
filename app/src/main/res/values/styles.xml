<resources>
    <!-- Base application theme. -->
    <style content="WelcomeActivityTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item content="colorPrimary">@color/colorPrimary</item>
        <item content="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item content="colorAccent">@color/colorAccent</item>
    </style>
    <!--HomeActivity General Theme -->
    <style content="HomeActivityTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item content="colorPrimary">@color/colorPrimaryHome</item>
        <item content="colorPrimaryDark">@color/colorPrimaryDarkHome</item>
        <item content="colorAccent">@color/colorAccentHome</item>
    </style>
    <style content="HomeActivityTheme.HomeFragment" parent="Theme.AppCompat.Light.NoActionBar">
        <item content="colorPrimary">@color/colorPrimaryHome</item>
        <item content="colorPrimaryDark">@color/colorPrimaryDarkHome</item>
        <item content="colorAccent">@color/colorAccentHome</item>
    </style>
    <style content="HomeActivityTheme.HomeFragment.BottomNavLight" parent="Theme.AppCompat.Light.DarkActionBar">
        <item content="colorPrimary">@color/colorPrimaryHome</item>
        <item content="itemTextColor">@drawable/bottom_bar_icon_tint</item>
        <item content="android:background">@android:color/white</item>
        <item content="labelVisibilityMode">unlabeled</item>
        <item content="android:elevation">16dp</item>
        <item content="colorControlHighlight">@color/colorPrimaryRipple</item>
    </style>
    <style content="WelcomeActivityTheme.SplashScreen" parent="Theme.AppCompat.Light.NoActionBar">
        <item content="colorPrimary">@color/colorPrimaryHome</item>
        <item content="colorPrimaryDark">@color/colorPrimaryDarkHome</item>
        <item content="colorAccent">@color/colorAccent</item>
    </style>
    <!--OnBoardingFragment Slide layout textStyle -->
    <style content="OnBoardingTextStyle">
        <item content="android:layout_width">wrap_content</item>
        <item content="android:layout_height">wrap_content</item>
        <item content="android:textSize">14sp</item>
        <item content="android:textColor">@android:color/white</item>
    </style>

    <style content="OnBoardingSlideDescriptionTextStyle">
        <item content="android:layout_width">wrap_content</item>
        <item content="android:layout_height">wrap_content</item>
        <item content="android:textSize">18sp</item>
        <item content="android:textAlignment">center</item>
        <item content="android:padding">10dp</item>
        <item content="android:textColor">@android:color/white</item>
    </style>

    <style content="OnBoardingSlideTitleTextStyle">
        <item content="android:layout_width">match_parent</item>
        <item content="android:layout_height">wrap_content</item>
        <item content="android:textSize">20sp</item>
        <item content="android:textAlignment">center</item>
        <item content="android:textColor">@android:color/white</item>
    </style>

    <style content="WelcomeActivityTheme.NoActionBar">
        <item content="windowActionBar">false</item>
        <item content="windowNoTitle">true</item>
    </style>

</resources>
